---
import { string } from 'astro:schema';

// new general header component

interface Props {
    lang?:string;
    title:string;
    description:string;
    ogUrl?: string;
}
const {
    lang='en',
    title='Welcome to MailTape - A place for music lovers by music lovers',
    description='Every Sunday morning, we release a music selection curated with a guest. MailTape is an Art project started in 2011.',
    ogUrl=Astro.url
} = Astro.props;

